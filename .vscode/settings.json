// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": true,
        "node_modules": true,
        "typings": true,
        "npm*": true,
        "css": true,
        "js": true,
        "fonts": true
    },
    "files.autoSave": "afterDelay",
    "editor.formatOnType": false,
    "editor.formatOnSave": true
    // "typescript.tsdk": "node_modules/typescript/lib"
}